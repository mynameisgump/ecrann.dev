	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		font-family: ULTRA, sans-serif;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
