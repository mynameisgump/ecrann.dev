---
const { text,href } = Astro.props;
---

<div class="growDiv">
    <h2 class="pageLink"><a href={href}>{text}</a></h2>
</div>

<style>
    @keyframes skew-x-shakeng{
		0% { transform: skewX(-15deg) skewY(5deg); }
		5% { transform: skewX(15deg) skewY(5deg); }
		10% { transform: skewX(-15deg) skewY(5deg); }
		15% { transform: skewX(15deg) skewY(5deg); }
		20% { transform: skewX(0deg) skewY(0deg); }
		100% { transform: skewX(0deg)skewY(0deg); }
	}

	@keyframes grow{
		0% { transform: scale(1); }
		/* 5% { transform: scale(1); }
		10% { transform: scale(1); }
		15% { transform: scale(1); }
		20% { transform: scale(1); } */
		100% { transform: scale(1.1); }
	}

    h2 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		margin-bottom: 1em;
	}
    
    a {
		color: inherit;
		text-decoration: none;
	}

    .pageLink {
		width: fit-content;
		margin: 0;
	}
	.pageLink:hover, .pageLink:active {
		animation: skew-x-shakeng 0.1s infinite;
	}
	.growDiv:hover, .growDiv:active {
		animation-name: grow;
		animation-duration: 0.1s;
		animation-delay: 0s;
		animation-iteration-count: 1;
		animation-fill-mode: forwards;
	}
	.growDiv {
		width: fit-content;
		height: fit-content;
	}
</style>